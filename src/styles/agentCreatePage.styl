.icon{
	width: 22px;
	height: 22px;
	margin: 2px 10px 10px 10px;
	position: relative;
    display: inline-block;
}

.account-wrapper .create-header-name{
    color: #fff;
    display: inline-block;
    font-size: 18px;
    font-weight: 600;
    padding: 6px 0 6px 0px;
    // text-transform: uppercase;
}

.agent-save-button {
    float: right;
    color: #000;
    height: 30px;
    min-width: 100px;
    margin: 4px;
    border-radius: 2px;
    padding: 5px 12px;
    outline: none;
    border-color: #4DBE77;
    border: 0;
    background-color: #4DBE77;
    &:hover {
        background-color: rgba(0,160,174,0.4);
    }
    &:active {
        background-color: rgba(0,160,174,0.8);
    }
    &:focus {
        background-color: rgba(0,160,174,0.8);
    }
}

.create-agent-box{
    width: 100%;
	padding: 0px;
    margin: 0;
}

.create-agent-box h3 {
    font-size: 16px;
    margin: 0;
    color: #333333;
    display: block;
    margin-right: auto;
    padding: 10px 0px;
    text-transform: uppercase;
    font-weight: 700;
}

.create-agent-box .header-name {
    font-size: 14px;
    padding: 6px 12px;
    background-color: #efefef;
    border: none;
    border-radius: 4px;
    margin: 0;
    width: 100%;
    -moz-box-shadow: inset 0 0 5px rgba(0,0,0,0.2);
    -webkit-box-shadow: inset 0 0 5px rgba(0,0,0,0.2);
    box-shadow: inset 0 0 5px rgba(0,0,0,0.2);
}

.create-agent-details{
    overflow-y: auto;
    display: block;
    width: 100%;
    height: calc(100% - 40px);
    padding: 0;
    float: left;
}

.create-agent-otherbtn{
    width: 172px;
    height: calc(100% - 50px);
    padding: 50px 26px 16px 26px;
    float: right;
    border-left: 1px solid #ccc;
}

.header-name{
	margin-left: 0px;
}

.agent-setting-btn {
    width: 120px;
    display: block;
    border: 1.5px solid #1fb572;
    border-radius: 5px;
    background: #fff;
    margin-bottom: 20px;
    float: left;
    padding: 0;
}

.agent-setting-btn img {
    width: 118px;
    height: 90px;
    position: relative;
    display: block;
    padding: 15px 20px;
    padding-bottom: 0;
    margin: 0;
}

.agent-details-wrapper,.account-wrapper {
    padding: 0px;
	height: 100%;
    float: left;
}

.basic-details {
    float: left;
    width: 100%;
    margin-bottom: 14px;
}

.basic-details, .ml-settings{
    padding: 0 10px;
}

.ml-settings {
    border-top: 1px solid #ccc;
}

.ml-threshold {
    margin-bottom: 14px;
}

.last-trained {
    padding: 12px;
    background-color: #EEEEEE;
    padding: 8px 10px;
    border-radius: 4px;
    box-shadow: 0px 1px 1px rgba(0,0,0,0.3);
}

.last-trained h4 {
    font-size: 14px;
    margin-top: 0;
    margin-bottom: 4px;
    font-weight: 700;
}

.last-trained p {
    margin: 0;
}

.ml-threshold h4 {
    font-size: 14px;
    margin-top: 0;
    margin-bottom: 8px;
}

.ml-threshold .input-group {
    width: 120px;
    background-color: #1FB572;
    border-radius: 4px;
    border: 1px solid #1FB572;
}

.ml-threshold .input-group .image {
    width: 34px;
    height: 30px;
    padding: 6px 10px;
}

.ml-threshold .input-group-btn:first-child .btn {
    padding: 0;
    border: 0;
    background-color: transparent;
}

.ml-threshold .input-group-btn:last-child .btn {
    padding: 0;
    border: 0;
    background-color: transparent;
}

.ml-threshold .input-number {
    border: 0;
    height: 30px;
    background-color: #fff;
    line-height: 18px;
    text-align: center;
}

.train-ml .btn {
    min-width: 100px;
    border-color: #1fb572;
    background-color: #1fb572;
    height: 38px;
    float: left;
    margin: 0px;
    border-radius: 2em;
    padding: 8px 15px;
    outline: none;
    border: 0px;
    box-shadow: 0px 1px 3px rgba(0,0,0,0.4);
}

.pls-note {
    background-color: #EEEEEE;
    padding: 8px 10px;
    border-radius: 4px;
    box-shadow: 0px 1px 1px rgba(0,0,0,0.3);
    float: left;
}

.pls-note h3 {
    padding: 0px;
    font-size: 14px;
    margin-bottom: 4px;
    text-transform: unset;
}

.pls-note span {
    font-size: 12px;
}

.create-agent-otherbtn button {
    background-color: #f4f4f4;
    border: 1.5px solid #f4f4f4;
    box-shadow: 0px 1px 3px rgba(0,0,0,0.4);
}

.create-agent-otherbtn button:hover {
    background-color: #f4f4f4;
    border: 1.5px solid #f4f4f4;
    box-shadow: 0px 3px 8px rgba(0,0,0,0.4);
    transition: all 300ms ease-in;
}

.agent-setting-btn p {
    padding: 6px;
    font-size: 14px;
}

.refresh_btn{
  -webkit-animation: rotation 1.5s infinite linear;
  animation: rotation 1.5s infinite linear;  
}

@-webkit-keyframes rotation {
		from {
				-webkit-transform: rotate(0deg);
		}
		to {
				-webkit-transform: rotate(359deg);
		}
}


#flash, #submit-error,#login-error, #intent-error, #flash-error,#login-success{
    border: 1px solid #037a43;
    background-color: #cdffc6;
    padding: 8px;
    border-radius: .3em;
    color: #057a3a;
    margin-left: 38%;
    display: none;
    z-index: 9999;
    top: 0px;
    font-weight: 600;
    max-width:400px;
    position:absolute;
}

#submit-error, #login-error, #intent-error, #flash-error{
    border: 1px solid #ff444b;
    background-color: #ffc6c9;
    color: #99282d;
}

#login-error,#login-success{
    float: left;
    text-align: center;
    margin: 0 0 14px 0;
    position: relative;
    width: 100%;
    padding: 4px 6px;
}

.details-main-wrapper #login-error, #intent-error{
    margin-left:6%;
    top: 0;
}


.total-pages input{
    color: #000;
    width: 40px;
    height: 24px;
    text-align: center;
    border: 0;
    border-radius: 3px;
}
