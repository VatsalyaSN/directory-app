.side-menu-wrapper{
    background-color #F7F9FA
    height calc(100% - 60px)
}

.profile-pic-wrapper{
    display: block;
    position: relative;
    top: 25px;
}

.profile-pic {
    display: block;
    position: relative;
    float: left;
    left: 50%;
    transform: translateX(-50%);
    
}

.profile-pic-wrapper .user-name{
    margin: 0px;
    padding: 9px 14px;
    display: block;
    font-weight: 500;
    font-size: 14px;
    color: #2878fa;
    float: left;
    text-align: center;
}

.profile-pic .initial-char {
    width: 100px;
    height: 100px;
    display: block;
    font-size: 30px;
    padding: 30px;
    text-transform: uppercase;
    text-align: center;
    font-weight: 500;
    color: #2878fa;
    border-radius: 50px;
    background-color: #efefef;
}