.navigation-menu {
    display: block;
    float: left;
    display: block;
    position: relative;
    margin: 0px;
    padding-top: 4px;
    height: 100%;
}

.left-menu {
    height: 100%;
    background-color: #EBEBEB;
    float: left;
    padding-left: 0;
    position: relative;
    z-index: 99;
    width: 46px;
    box-shadow: 0px 0px 1px rgba(0,0,0,0.3);
}

.menu-expanded .left-menu{
    padding-left : 20px;
    padding-top : 10px;
}

.left-menu li {
    display: block;
    position: relative;
    float: left;
}

.left-menu li:focus{
    outline: none;
}

.left-menu li:hover .name-popup{
    display: block;
}

.left-menu a {
    width: 100%;
    float: left;
}

.navigation-menu .menu-link .dropdown-icon {
    top: 50%;
    transform: translateY(50%);
    margin-right: 5px
}

.navigation-menu .menu-link .dropdown-icon .image {
    -ms-transform: rotate(-90deg); /* IE 9 */
    -webkit-transform: rotate(-90deg); /* Chrome, Safari, Opera */
    transform: rotate(-90deg);
}

.left-menu .menu-link a .icon {
    width: 40px;
    height: 40px;
    position: relative;
    display: inline-block;
    padding: 8px;
    margin: 0;
}

.menu-expanded {
    width: 250px;
    height: 100%;
    position: fixed;
    display: block;
    left: 0;
    top: 0;
    background-color: #3c3c3c;
    z-index: 9999;
    box-shadow: 0 9px 28px rgba(0,0,0,0.6);
    -webkit-transform: translateX(-270px);
    transform: translateX(-270px);
    -webkit-transition: -webkit-transform 0.3s ease-in-out;
    transition: transform 0.3s ease-in-out;
}

.menu-expanded.active {
    -webkit-transform: translateX(0);
    transform: translateX(0);
}

.overlay.active{
    display block;
}

.menu-expanded .top-bar {
    background-color: #fff;
    box-shadow: none;
}

.menu-expanded .product-logo > a > span {
    color: #000;
}

.dropdown-icon {
    display: block;
    height: 100%;
}

