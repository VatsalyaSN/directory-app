.menu-expanded .dropdown-btn {
    background-color: #F0F0F0;
    box-shadow: 0 9px 16px rgba(0,0,0,0.26);
    top: 58px;
    right: 8px;
}

.dropdown-btn .arrow-up {
    width: 0;
    height: 0;
    border-left: 10px solid transparent;
    border-right: 10px solid transparent;
    border-bottom: 10px solid #F0F0F0;
    position: absolute;
    right: 9px;
    top: -10px;
}

.menu-expanded .left-menu {
    width: 100%;
}

.menu-expanded .left-menu li {
    width: 100%;
}

.menu-link .link-name {
    display: block;
    position: relative;
    font-size: 14px;
    padding: 10px 0px;
    float: left;
    // text-transform: uppercase;
}

.menu-expanded .menu-link > a{
    margin : 8px 0px;
}

.menu-expanded .menu-link span {
    padding: 2px 0 0 0;
}

.menu-expanded .menu-link .menu-link-icon{
    width : unset;
    height : unset;
    margin-right :10px;
