.menu-link .menu-link-icon {
    display: block;
    position: relative;
    float: left;
    width: 46px;
    height: 40px;
    border-radius: 44px;
}

.menu-link a {
    width: 100%;
    float: left;
    margin: 0;
    border: 0;
    color: #333333;
    font-weight: 500;
    text-decoration: none;
}

.menu-link .menu-link-icon span {
    display: block;
    padding: 7px 11px;
    font-size: 16px;
    line-height: 26px;
    font-weight: 900;
    text-align: center;
    width: 100%;
    height: 100%;
    float: left;
    text-transform: uppercase;
}

.menu-link .menu-link-icon span .fa {
    font-size: 4px;
    padding: 10px 1.6px;
    float: left;
    vertical-align: middle;
    position: relative;
    letter-spacing: 0;
}

