
@import 'topheader.styl';
@import 'floatButtonsPanel.styl';
@import 'deviceResponsive.styl';
@import 'directory.styl';
@import 'sideMenu.styl';

body {
    font-family: 'Lato', sans-serif;
    color: #333;
    width: 100%;
    height: 100%;
    position: fixed;
}

#root, .container-fluid {
    width: 100%;
    height: 100%;
    position: relative;
}

.padding-none{
    padding 0px
}


.icon{
	width: 22px;
	height: 22px;
	margin: 2px 10px 10px 10px;
	position: relative;
    display: inline-block;
}

button:active {
    outline: 0 !important;
}

button:focus {
    outline: 0 !important;
}

div:active {
    outline: 0 !important;
}

div:focus {
    outline: 0 !important;
}

select:active {
    outline: 0 !important;
}

select:focus {
    outline: 0 !important;
}

input:active {
    outline: 0 !important;
    border: 0;
}

input:focus {
    outline: 0 !important;
    border: 0;
}

.account-detail{
    overflow-y: auto;
    display: block;
    height: calc(100% - 40px);
    padding: 0;
    float: left;
    background-color #fff;
    border-radius: 0 0 3px 3px 
}

.agent-save-button {
    float: right;
    height: 30px;
    min-width: 100px;
    margin: 4px;
    border-radius: 2px;
    padding: 5px 12px;
    outline: none;
    border-color: #fff;
    border: 0;
    background-color: #fff;
    &:hover {
        background-color: rgba(0,160,174,0.4);
    }
}

.create-header{
	width: 100%;
	background-color: #3c3c3c;
	border-radius: 3px 3px 0 0;
	box-shadow: 0px 1px 2px rgba(0, 0, 0, 0.30);
    display: block;
    float: left;
}

.create-header-name{
    color: #fff;
    display: inline-block;
    font-size: 18px;
    font-weight: 600;
    padding: 6px 0 6px 12px;
    // text-transform: uppercase;
}

.page-nav-wrapper {
    display: block;
    float: left;
    width: 100%;
    position: relative;
    padding: 0px;
    background-color:#383e4b;
    border-radius: 2em;
}

.hybrid-div{
    width: calc(100% - 116px);
    float: left;
    display: block;
    position: relative;
    height: calc(100% - 47px);
    background-color: #ebebeb;
    padding: 7px 0 6px 6px;
}

.overlay {
    position: fixed; /* Sit on top of the page content */
    display: none; /* Hidden by default */
    width: 100%; /* Full width (cover the whole page) */
    height: 100%; /* Full height (cover the whole page) */
    top: 0; 
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0,0,0,0.5); /* Black background with opacity */
    z-index: 999; /* Specify a stack order in case you're using a different order for other elements */
    cursor: pointer; /* Add a pointer on hover */
}

#launcher {
    opacity: 0 !important;
    width: 50px !important;
    height: 50px !important;
    margin: 10px !important;
}

.Arrange--middle .Arrange-sizeFit {
    display: none !important;
}