
@import 'topheader.styl';
@import 'floatButtonsPanel.styl';
@import 'deviceResponsive.styl';
@import 'directory.styl';
@import 'sideMenu.styl';

body {
    font-family: 'Lato', sans-serif;
    color: #333;
    width: 100%;
    height: 100%;
    min-width: 550px;
    position: fixed;
}

#root, .container-fluid {
    width: 100%;
    height: 100%;
    position: relative;
}

.padding-none{
    padding 0px
}


.icon{
	width: 22px;
	height: 22px;
	margin: 2px 10px 10px 10px;
	position: relative;
    display: inline-block;
}

::-webkit-scrollbar {
    width: 6px;
    position: relative;
}

::-webkit-scrollbar-track {
    padding-right: 3px;
    background-color: #e6e6e6;
}

::-webkit-scrollbar-thumb {
    padding-right: 3px;
    border-radius: 10px;
    background-color: #a5a5a5;
}

button:active {
    outline: 0 !important;
}

button:focus {
    outline: 0 !important;
}

div:active {
    outline: 0 !important;
}

div:focus {
    outline: 0 !important;
}

select:active {
    outline: 0 !important;
}

select:focus {
    outline: 0 !important;
}

input:active {
    outline: 0 !important;
    border: 0;
}

input:focus {
    outline: 0 !important;
    border: 0;
}



